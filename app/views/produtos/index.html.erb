<div class="container mt-4">
  <h1 class="text-center mb-5">Nossos Produtos</h1>
  <div class="row g-4">
    <% @produtos.each do |produto| %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
        <div class="card produto-card h-100 shadow-sm">
          <!-- Imagem com altura fixa (Gestalt - Unidade) -->
          <div class="card-img-container" style="height: 250px; overflow: hidden;">
            <% if produto.imagem.attached? %>
              <%= image_tag produto.imagem, class: "card-img-top h-100 w-100", style: "object-fit: cover;" %>
            <% else %>
              <div class="bg-light d-flex align-items-center justify-content-center h-100">
                <span class="text-muted">Sem imagem</span>
              </div>
            <% end %>
          </div>
          <div class="card-body d-flex flex-column">
            <!-- Nome do produto com altura fixa -->
            <h5 class="card-title product-name" style="min-height: 48px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
              <%= produto.nome %>
            </h5>
            <!-- Preço com destaque (Gestalt - Ênfase) -->
            <div class="price-section mb-3">
              <span class="h5 text-primary fw-bold">R$ <%= number_with_precision(produto.preco, precision: 2) %></span>
            </div>
            <!-- Botão primário grande (Fitts's Law) -->
            <div class="mt-auto">
              <%= link_to "Comprar", produto, class: "btn btn-primary w-100 py-2 fw-bold", style: "font-size: 1.1rem;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>