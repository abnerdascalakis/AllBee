<%= simple_form_for(@produto, html: { class: 'needs-validation', novalidate: true }) do |f| %>
  
  <%# Exibe notificações de erro, estilizadas pelo Simple Form e pelo Bootstrap (se configurado) %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs p-4 border rounded-3 shadow-sm bg-light">
    <h4 class="mb-4 text-primary">Detalhes do Produto</h4>
    
    <%# Campo Nome %>
    <%= f.input :nome, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control' } %>
    
    <%# Campo Descrição %>
    <%= f.input :descricao, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control', rows: 3 } %>
    
    <%# Campo Preço (usando layout de coluna para melhor visualização) %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :preco, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control' } %>
      </div>
      <div class="col-md-6">
        <%# Campo Estoque %>
        <%= f.input :estoque, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control' } %>
      </div>
    </div>
    
    <div class="mb-3">
      <%# Campo de Upload de Imagem %>
      <%# O Simple Form geralmente não tem um 'input' direto para 'file_field', então usamos o label e o file_field brutos com classes do Bootstrap. %>
      <%= f.label :imagem, class: 'form-label' %>
      <%= f.file_field :imagem, class: 'form-control', id: 'formFile' %>
    </div>
    
  </div>
  
  <div class="form-actions mt-4 d-grid gap-2">
    <%# Botão de Submit com classes primárias do Bootstrap e largura total ('d-grid gap-2' e 'btn-lg') %>
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
  
<% end %>